<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/show.css" />
<%- include('../partials/nav') %>

<main>
  <div id="name"><%= profile.name %></div>
  <div> 
    <img id="avatar"
      class="profile-avatar"
      src="<%=  profile.avatar %>" 
      alt="<%= profile.name %>"
    >
  </div>
  <% if (profile.likeGames.length) { %>
  <div id="like-games">Games I like: 
    <% profile.likeGames.forEach(game => { %>
    <p id="game-title"><%= game.title %></p>
    <% }) %>
  <div>
    <% } else { %>
      <h4>No Liked Games Yet</h4>
      <% } %>
  <% if (games.length) { %>
  <div class="games-created"> 
    <div id="created">Games <%= profile.name %>'s  created:
    <% games.forEach(game => { %>
      <p id="created-games"><%= game.title %></p>
    <% }) %>
  </div>
  </div>
  <% } else { %>
    <h4>No Games created</h4>
    <% } %>
</main>

<%- include('../partials/footer') %>