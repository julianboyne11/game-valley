<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/edit.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= game.title %></h1>
  <h3>Hey <%= game.owner ? game.owner.name : "Stranger" %>, are you sure you want to edit <%= game.title %>?</h3>
  <form id="new-form" action="/games/<%= game._id %>?_method=PUT" method="POST">
    <label for="genre-input">Genre:</label>
    <select name="genre" id="category-select" required>
      <option value="<%= game.genre %>"><%= game.genre %></option>
      <option value="Shooters">Shooters(FPS and TPS)
      </option>
      <option value="Simulation and sports">Simulation and sports</option>
      <option value="Multiplayer">Multiplayer online battle arena (MOBA)</option>
      <option value="Role-playing">Role-playing (RPG, ARPG, and More)</option>
      <option value="Action-adventure">Action-adventure</option>
      <option value="Survival and horror">Survival and horror</option>
    </select>
    <label for="release-year-input">Release Year:</label>
    <input type="date" name="releaseDate" id="release-year-input">
    <label for="description-input">Description:</label>
    <textarea name="description" id="description-input"><%= game.description %></textarea>
    <button id="save-btn" type="submit">Save Game</button>
  </form>
</main>

<%- include('../partials/footer') %>